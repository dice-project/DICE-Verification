   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="it.polimi.dice.verification.ui.commands.verificationCategory"
            name="DICE Verification">
      </category>
      <command
            categoryId="it.polimi.dice.verification.ui.commands.verificationCategory"
            defaultHandler="it.polimi.dice.verification.ui.handlers.LaunchStormVerificationHandler"
            description="Launches DICE Verification for Storm Applications"
            id="it.polimi.dice.verification.ui.commands.launchStormVerificationCommand"
            name="Launch DICE Verification - Storm">
      </command>
      <command
            categoryId="it.polimi.dice.verification.ui.commands.verificationCategory"
            defaultHandler="it.polimi.dice.verification.ui.handlers.LaunchSparkVerificationHandler"
            description="Launches DICE Verification for Spark Applications"
            id="it.polimi.dice.verification.ui.commands.launchSparkVerificationCommand"
            name="Launch DICE Verification - Spark">
      </command>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="it.polimi.dice.verification.ui.launcher.storm.StormVerificationLaunchShortcut"
            icon="icons/verify_icon_storm.ico"
            id="it.polimi.dice.verification.ui.storm.shortcut"
            label="DICE &amp;Verification - Storm"
            modes="run">
            <contextualLaunch>
         <enablement>
           <with variable="selection">
             <count value="1"/>
              <iterate>
               <or>
                  <adapt
                        type="org.eclipse.papyrus.infra.onefile.model.IPapyrusElement">
                  </adapt>
                  <and>
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                     </adapt>
                     <or>
                        <test
                              forcePluginActivation="true"
                              property="org.eclipse.core.resources.extension"
                              value="notation">
                        </test>
                        <test
                              forcePluginActivation="true"
                              property="org.eclipse.core.resources.extension"
                              value="di">
                        </test>
                        <test
                              forcePluginActivation="true"
                              property="org.eclipse.core.resources.extension"
                              value="uml">
                        </test>
                      </or>
                  </and>
               </or>
              </iterate>
             </with>
         </enablement>
 		</contextualLaunch>
       <configurationType
              id="it.polimi.dice.verification.launchConfigurationTypeStorm">
       </configurationType>
       <description
              description="Launches a verification task on the specified UML model for Storm application"
              mode="run">
       </description>       
      </shortcut>
            <shortcut
            class="it.polimi.dice.verification.ui.launcher.spark.SparkVerificationLaunchShortcut"
            icon="icons/verify_icon_spark.ico"
            id="it.polimi.dice.verification.ui.spark.shortcut"
            label="DICE &amp;Verification - Spark"
            modes="run">
            <contextualLaunch>
         <enablement>
           <with variable="selection">
             <count value="1"/>
              <iterate>
               <or>
                  <adapt
                        type="org.eclipse.papyrus.infra.onefile.model.IPapyrusElement">
                  </adapt>
                  <and>
                     <adapt
                           type="org.eclipse.core.resources.IFile">
                     </adapt>
                     <or>
                        <test
                              forcePluginActivation="true"
                              property="org.eclipse.core.resources.extension"
                              value="notation">
                        </test>
                        <test
                              forcePluginActivation="true"
                              property="org.eclipse.core.resources.extension"
                              value="di">
                        </test>
                        <test
                              forcePluginActivation="true"
                              property="org.eclipse.core.resources.extension"
                              value="uml">
                        </test>
                      </or>
                  </and>
               </or>
              </iterate>
             </with>
         </enablement>
 		</contextualLaunch>
       <configurationType
              id="it.polimi.dice.verification.launchConfigurationTypeSpark">
       </configurationType>
       <description
              description="Launches a verification task on the specified UML model for Spark application"
              mode="run">
       </description>       
      </shortcut>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="org.eclipse.papyrus.infra.onefile.model.IPapyrusElement"
            class="it.polimi.dice.verification.adapters.LaunchableDummyAdapterFactory">
         <adapter
               type="org.eclipse.debug.ui.actions.ILaunchable">
         </adapter>
      </factory>
      <factory
            adaptableType="org.eclipse.papyrus.infra.onefile.model.IPapyrusElement"
            class="it.polimi.dice.verification.adapters.UmlModelAdapterFactory">
         <adapter
               type="org.eclipse.papyrus.uml.tools.model.UmlModel">
         </adapter>
      </factory>
      <factory
            adaptableType="org.eclipse.core.resources.IFile"
            class="it.polimi.dice.verification.adapters.UmlModelAdapterFactory">
         <adapter
               type="org.eclipse.papyrus.uml.tools.model.UmlModel">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.dice.ui.preferences"
            class="it.polimi.dice.verification.ui.preferences.DiceVerificationPreferencePage"
            id="it.polimi.dice.verification.ui.prefPage1"
            name="Verification Tool">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="it.polimi.dice.verification.ui.preferences.DiceVerificationPreferencesInitializer">
      </initializer>
   </extension>
