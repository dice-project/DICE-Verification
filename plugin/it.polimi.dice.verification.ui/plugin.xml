<plugin>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="it.polimi.dice.verification.ui.launcher.storm.StormVerificationLaunchConfigurationTabGroup"
            id="it.polimi.dice.verification.ui.launchConfigurationTabGroupStorm"
            type="it.polimi.dice.verification.launchConfigurationTypeStorm">
      </launchConfigurationTabGroup>
      <launchConfigurationTabGroup
            class="it.polimi.dice.verification.ui.launcher.spark.SparkVerificationLaunchConfigurationTabGroup"
            id="it.polimi.dice.verification.ui.launchConfigurationTabGroupSpark"
            type="it.polimi.dice.verification.launchConfigurationTypeSpark">
      </launchConfigurationTabGroup>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabs">
      <tab
            class="it.polimi.dice.verification.ui.launcher.storm.StormMainLaunchConfigurationTab"
            group="it.polimi.dice.verification.ui.launchConfigurationTabGroupStorm"
            id="it.polimi.dice.verification.ui.mainTabStorm"
            name="Main">
      </tab>
     <tab
            class="it.polimi.dice.verification.ui.launcher.spark.SparkMainLaunchConfigurationTab"
            group="it.polimi.dice.verification.ui.launchConfigurationTabGroupSpark"
            id="it.polimi.dice.verification.ui.mainTabSpark"
            name="Main">
      </tab>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            configTypeID="it.polimi.dice.verification.launchConfigurationTypeStorm"
            icon="icons/verify_icon_storm.ico"
            id="it.polimi.dice.verification.ui.launchConfigurationTypeImage">
      </launchConfigurationTypeImage>
      <launchConfigurationTypeImage
            configTypeID="it.polimi.dice.verification.launchConfigurationTypeSpark"
            icon="icons/verify_icon_spark.ico"
            id="it.polimi.dice.verification.ui.launchConfigurationTypeImage">
      </launchConfigurationTypeImage>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
       <menuContribution
            allPopups="false"
            locationURI="menu:org.dice.menu.tools">
         <menu
               icon="icons/verify_icon.png"
               id="it.polimi.dice.verification.ui.menus.diceVerificationMenu"
               label="DICE Verification Tools">
            <command
                  commandId="it.polimi.dice.verification.ui.commands.launchStormVerificationCommand"
                  icon="icons/verify_icon_storm.ico"
                  label="Launch DICE Verification - Storm"
                  style="push">
            </command>
            <command
                  commandId="it.polimi.dice.verification.ui.commands.launchSparkVerificationCommand"
                  icon="icons/verify_icon_spark.ico"
                  label="Launch DICE Verification - Spark"
                  style="push">
            </command>
         </menu>
      </menuContribution>
